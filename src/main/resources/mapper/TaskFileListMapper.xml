<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.test.mapper.TaskFileListMapper">

    <resultMap id="taskFileListEntity" type="com.example.test.bean.TaskFileListBean">
        <result property="subTaskId" column="subTaskId"/>
        <result property="filePath" column="filePath"/>
        <result property="empId" column="empId"/>
        <result property="commitDate" column="commitDate"/>
    </resultMap>

    <select id="getFileList" parameterType="String" resultType="com.example.test.bean.TaskFileListBean">
        SELECT *
        FROM taskfilelsit
        WHERE subtaskId = #{taskId}
    </select>

    <select id="getFileListByEmpId" parameterType="String" resultType="com.example.test.bean.TaskFileListBean">
        SELECT *
        FROM taskfilelsit
        WHERE empId = #{empId}
    </select>

    <select id="getFileListByEmpIdTaskId" parameterType="String" resultType="com.example.test.bean.TaskFileListBean">
        SELECT *
        FROM taskfilelsit
        WHERE subtaskId = #{taskId}
        and empId = #{empId}
    </select>

    <insert id="addTaskFileList">
        insert into taskfilelsit (subTaskId, filePath, empId, commitDate)
        values (#{subTaskId}, #{filePath}, #{empId}, #{commitDate})
    </insert>

    <delete id="deleteTaskFileList">
        delete from
        taskfilelsit where filePath = #{filePath}
    </delete>

</mapper>